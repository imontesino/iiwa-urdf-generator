{% macro link(name, material, mesh_folder) %}
<link name="{{ name }}">
    <inertial>
        <origin rpy="0 0 0" xyz="0.0001 0.021 0.076"/>
        <mass value="1.7"/>
        <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.018" iyz="0" izz="0.005"/>
    </inertial>
    <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
        <mesh filename="{{ mesh_folder }}/link_5.obj"/>
        </geometry>
        <material name="{{ material }}"/>
    </visual>
    <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
        <mesh filename="{{ mesh_folder }}/link_5.stl"/>
        </geometry>
    </collision>
</link>
{% endmacro %}
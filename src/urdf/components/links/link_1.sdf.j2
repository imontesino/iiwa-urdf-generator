{% macro link(name, material, mesh_folder) %}
<link name="{{ name }}">
    <inertial>
        <origin rpy="0 0 0" xyz="0 -0.03 0.12"/>
        <mass value="4"/>
        <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.09" iyz="0" izz="0.02"/>
    </inertial>
    <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
        <mesh filename="{{ mesh_folder }}/link_1.obj"/>
        </geometry>
        <material name="{{ material }}"/>
    </visual>
    <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
        <mesh filename="{{ mesh_folder }}/link_1.stl"/>
        </geometry>
    </collision>
</link>
{% endmacro %}
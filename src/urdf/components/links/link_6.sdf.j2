{% macro link(name, material, mesh_folder) %}
<link name="{{ name }}">
    <inertial>
        <origin rpy="0 0 0" xyz="0 0.0006 0.0004"/>
        <mass value="1.8"/>
        <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.0036" iyz="0" izz="0.0047"/>
    </inertial>
    <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
        <mesh filename="{{ mesh_folder }}/link_6.obj"/>
        </geometry>
        <material name="{{ material }}"/>
    </visual>
    <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
        <mesh filename="{{ mesh_folder }}/link_6.stl"/>
        </geometry>
    </collision>
</link>
{% endmacro %}